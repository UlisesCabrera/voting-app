<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%- title %></title>
    <meta name="author" content="Ulises Cabrera">
    
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular-route.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular-cookies.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
    <!-- HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- styles -->
    <link rel="stylesheet" href="css/style.css">
  </head>
  <body ng-app="Voting-Poll">
	  <div id='main' class="container" ng-controller="MainController">
			<nav class="navbar-fluid navbar-default navbar-fixed-top">
				<div class="container">
					<a class="navbar-brand" href="#"> My Poll App</a>
					<p class="navbar-right navbar-text" ng-hide="user()"><a href="#/login">Login</a> or <a href="#/signup">Register</a></p>
					<p class="navbar-right navbar-text" ng-show="user()"><a href="#" ng-click="signout()">Logout</a></p>
					<p class="navbar-right navbar-text" ng-show="user()">Signed in as {{ user() }}</p>
				</div>
			</nav>
			<div class="col-xs-12">
				<div ng-view>
				</div>
			</div>
		</div>
		
	<script type="text/javascript">
	  
	  // fix the facebook url bug
		if (window.location.hash === '#_=_') window.location.hash = '#!';
		
		// pass the user object from the server so it can be used by angular
		window.user = <%- user || 'null' %>;
	</script>
	
	<!-- services -->
 <script type="text/javascript" src="js/services/userState.js"></script>

	<!-- controllers -->
	<script type="text/javascript" src="js/controllers/mainController.js"></script>
	<script type="text/javascript" src="js/controllers/authController.js"></script>
	
	<!-- main module -->
	<script type="text/javascript" src="js/app-client.js"></script>
  </body>
</html>
