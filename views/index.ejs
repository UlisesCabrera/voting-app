  <body ng-controller="UserController">
	  
			
			<div id="nav-menu" class="navbar navbar-default navbar-fixed-top" role="navigation">
			    <div class="container-fluid">
			        <div class="navbar-header"><a class="navbar-brand" href="#/">VotePlex</a>
			            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-menubuilder"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
			            </button>
			        </div>
			        <div class="collapse navbar-collapse navbar-menubuilder">
			            <ul class="nav navbar-nav navbar-right">
			            		<li ng-show="getCurrentUser() && isInTimeline()"><button type="button" class="btn btn-default btn-block navbar-btn" data-toggle="modal" data-target=".new-poll-modal">Create New Poll</button>
</li>
			            		<li ng-show="getCurrentUser()" ><a href="#/profile/{{ getCurrentUser()._id }}">Hello,  {{ getCurrentUser().username }}</a>
			                </li>	   
			                <li ng-show="!getCurrentUser() && !isGettingNewPassword()"><a href="#/login"><i class="fa fa-sign-in"></i> Login</a>
			                </li>
			                 <li ng-show="getCurrentUser() && !isGettingNewPassword()"><a href="#/profile/{{ getCurrentUser()._id }}"><i class="fa fa-user"></i> Profile</a>
			                </li>
			                <li ng-show="getCurrentUser() && !isGettingNewPassword()"><a href="#/" ng-click="signout()"><i class="fa fa-sign-out"></i> Logout</a>
			                </li>
			            </ul>
			        </div>
			    </div>
			</div>
			
		<div id='main' class="container">
			<div class="row">
				
				<div ng-view>
				</div>
				
			</div>
		</div>
		
	<script type="text/javascript">
	  
	  // fix the facebook url bug
		if (window.location.hash === '#_=_') window.location.hash = '#!';
		
		// pass the user object from the server so it can be used by angular
		window.user = <%- user || 'null' %>;
	</script>
	
	<!-- vendors -->
	<script src="vendor/jquery/dist/jquery.min.js"></script>
	<script src="vendor/bootstrap/dist/js/bootstrap.min.js"></script>
	
