  <body>
	  <div id='main' class="container" ng-controller="UserController">
			<nav class="navbar-fluid navbar-default navbar-fixed-top">
				<div class="container">
					<a class="navbar-brand" href="#"> My Poll App</a>
					<p class="navbar-right navbar-text" ng-hide="getCurrentUser()"><a href="#/login">Login</a></p>
