			</nav>
			<div class="row">
				<div ng-view>
				</div>
			
			</div>
		</div>
		
	<script type="text/javascript">
	  
	  // fix the facebook url bug
		if (window.location.hash === '#_=_') window.location.hash = '#!';
		
		// pass the user object from the server so it can be used by angular
		window.user = <%- user || 'null' %>;
	</script>
	
	<!-- services -->
 <script type="text/javascript" src="js/services/userState.js"></script>

	<!-- controllers -->
	<script type="text/javascript" src="js/controllers/timelineController.js"></script>
	<script type="text/javascript" src="js/controllers/userController.js"></script>
	
	<!-- main module -->
	<script type="text/javascript" src="js/app-client.js"></script>
