	<script type="text/javascript" src="js/controllers/userPollsController.js"></script>
	<script type="text/javascript" src="js/controllers/timelineController.js"></script>
	<script type="text/javascript" src="js/controllers/userController.js"></script>
	<script type="text/javascript" src="js/controllers/singlePollController.js"></script>
	
	<!-- main module -->
	<script type="text/javascript" src="js/app-client.js"></script>
